			"name": "0. Autenticación",
			"item": [
				{
					"name": "Obtener Token OAuth 2.0",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Guardar token automáticamente",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('bearer_token', jsonData.access_token);",
									"    pm.environment.set('token_type', jsonData.token_type);",
									"    pm.environment.set('expires_in', jsonData.expires_in);",
									"    ",
									"    // Calcular tiempo de expiración",
									"    var expiryTime = new Date(Date.now() + (jsonData.expires_in * 1000));",
									"    pm.environment.set('token_expiry', expiryTime.toISOString());",
									"    ",
									"    console.log('✓ Token guardado exitosamente');",
									"    console.log('Expira en: ' + jsonData.expires_in + ' segundos');",
									"    ",
									"    pm.test('Token obtenido correctamente', function() {",
									"        pm.expect(jsonData.access_token).to.be.a('string').and.not.empty;",
									"    });",
									"} else {",
									"    pm.test('Error al obtener token', function() {",
									"        pm.response.to.have.status(200);",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "{{grant_type}}",
									"type": "text"
								},
								{
									"key": "client_id",
									"value": "{{client_id}}",
									"type": "text"
								},
								{
									"key": "client_secret",
									"value": "{{client_secret}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{auth_url}}",
							"host": ["{{auth_url}}"]
						},
						"description": "Obtiene un Bearer Token mediante OAuth 2.0 Client Credentials"
					},
					"response": []
				}
			]
